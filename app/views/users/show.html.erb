<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <br/>
        <h2 class="media-heading">User Profile</h2>
        <br/>
        <% if @user %>
          <h2 class="media-heading">name: <%= @user.name %></h2>
          <h2 class="media-heading">email: <%= @user.email %></h2>
          <% if @items.first %>
            <br/>
            <h2>To-Do Items</h2>
            <table class="table table-bordered table-condensed">
              <thead>
                <tr>
                  <th><h3>Item</h3></th>
                  <th><h3>Days Left</h3></th>
                  <th><h3>Complete</h3></th>
                </tr>
              </thead>
              <tbody>
                <% @items.each do |item| %>
                <%= render partial: 'items/item', locals: {user: @user, item: item} %>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <br/>
            <h2>No to-do items</h2>
          <% end %>
        <% else %>
          <br/>
          <h2>No user signed in</h2>
        <% end %>
      </div>
    </div>
  </div>
</div>